<div class="input-group mb-3">
  <h4><%= "Chi tiết câu trả lời của người dùng" %></h4>
</div>
<%= render  "layouts/flash_message" %>
<div class="form-group">
  <label for="example-text-input" class="col-form-label"><%= "Ngày" %>:</label>
  <span class="col-form-label"><%= @answesheets.date %></span>
</div>

<div class="form-group">
  <label for="example-text-input" class="col-form-label"><%= "Câu hỏi" %>:</label>
  <span class="col-form-label"><%= @question.title %></span>
</div>

<div class="form-group">
  <label for="example-text-input" class="col-form-label"><%= "Câu trả lời" %>:</label>
  <span class="col-form-label"><%= @answer.content %></span>
</div>

<div class="form-group">
  <label for="example-text-input" class="col-form-label"><%= "Tên người trả lời" %>:</label>
  <span class="col-form-label"><%= @user.real_name %></span>
</div>

<div class="form-group">
  <%= link_to raw("<i class='fa fa-trash fa-lg'></i><span> Xóa </span>"),
    admin_answesheet_path(@answesheets), class: "btn btn-danger",
    method: :delete,
    remote: true,
    data: { confirm: "Bạn chắc chắn muốn xoá không?" }
  %>
</div>