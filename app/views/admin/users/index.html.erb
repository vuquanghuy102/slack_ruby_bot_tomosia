<div class="input-group mb-3">
  <h3>Danh sách người dùng</h3>
</div>
<%= render  "layouts/flash_message" %>
<div class="single-table">
  <div class="table-responsive">
    <table class="table table-bordered text-center">
      <thead class="text-uppercase">
        <tr>
          <th scope="col"><%= "Id" %></th>
          <th scope="col"><%= "Tên thật" %></th>
          <th scope="col"><%= "Email" %></th>
        </tr>
      </thead>
      <tbody class="body-table">
        <% if @users.length > 0 %>
          <% @users.each_with_index do |user, index| %>
            <tr>
              <% if params['page'].present? && params['page'] != "1" %>
                <th scope="row"><%= link_to index + 1 + (15 * (JSON.parse(params[:page]) - 1)), admin_user_path(user) %></th>
              <% else %>
                <th scope="row"><%= link_to index + 1, admin_user_path(user) %></th>
              <% end %>
              <td><%= user.real_name %></td>
              <td><%= user.email %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <%= render "layouts/will_paginate", data: @users %>
  </div>
</div>