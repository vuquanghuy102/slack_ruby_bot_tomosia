<div class="input-group mb-3">
  <h4><%= "Chi tiết câu hỏi" %></h4>
</div>
<%= render  "layouts/flash_message" %>
<div class="form-group">
  <label for="example-text-input" class="col-form-label"><%= "Tiêu đề câu hỏi" %>:</label>
  <span class="col-form-label"><%= @questions.title %></span>
</div>

<div class="form-group">
  <label for="example-text-input" class="col-form-label"><%= "Câu trả lời của câu hỏi" %>:</label>
  <% if @answers.present? %>
    <table class="table table-bordered text-center">
      <thead class="text-uppercase">
        <tr>
          <th scope="col"><%= "Id" %></th>
          <th scope="col"><%= "Nội dung câu trả lời" %></th>
        </tr>
      </thead>
      <tbody class="body-table">
        <% if @answers.length > 0 %>
          <% @answers.each_with_index do |answer, index| %>
            <tr>
              <th scope="row"><%= link_to index + 1, admin_answer_path(answer) %></th>
              <td><%= answer.content %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <span>Không có câu trả lời nào.</span>
  <% end %>
</div>
<div class="form-group">
  <%= link_to raw("<i class='fa fa-pencil-square-o fa-lg'></i><span> Sửa </span>"),
    edit_admin_question_path(@questions),
    class: "btn btn-primary"
  %>
  <%= link_to raw("<i class='fa fa-trash fa-lg'></i><span> Xóa </span>"),
    admin_question_path(@questions), class: "btn btn-danger",
    method: :delete,
    remote: true,
    data: { confirm: "Bạn chắc chắn muốn xoá không?" }
  %>
</div>