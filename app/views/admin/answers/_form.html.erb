<%= form_for :answers, url: api, method: method  do |f| %>
  <%= render  "layouts/flash_message" %>
  <div class="form-group">
    <label for="example-text-input" class="col-form-label"><%= "Nội dung câu trả lời"%></label>
    <span class="required">*</span>
    <%= f.text_field :content, { class: 'form-control', required: true }%>
  </div>

  <div class="form-group">
    <label for="example-room-input" class="col-form-label"><%= "Câu hỏi"%></label>
    <span class="required">*</span>
    <%= f.select(
      "question_id", Question.all.collect {|q| [ q.title, q.id ] },
      { prompt: t('Chọn câu hỏi tương ứng cho câu trả lời', name: "Question")},
      { class: 'form-control', required: true }
    )%>
  </div>

  <div class="form-group submit-form-customer">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>