<div class="input-group mb-3">
  <h4>Thông tin Admin</h4>
</div>
<%= render  "layouts/flash_message" %>
<div class="form-group">
  <label for="example-text-input" class="col-form-label"><%= t('label.email') %>: </label>
  <span class="col-form-label"><%= current_admin.email %></span>
</div>
<div class="form-group">
  <label for="example-text-input" class="col-form-label"> <b>Đổi mật khẩu</b></label>
</div>
<%= form_for :admin, url: admin_profile_path , method: 'put' do |f| %>
  <div class="form-group">
    <%= f.label "Mật khẩu mới", :class => "col-form-label"%>
    <span class="required">*</span>
    <%= f.password_field :password, autocomplete: "current-password", :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Xác nhận lại mật khẩu", :class => "col-form-label"%>
    <span class="required">*</span>
    <%= f.password_field :password_confirmation, autocomplete: "current-password", :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Lưu", :class => "btn btn-primary" %>
  </div>
<% end %>